using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {
            do
            {
                Console.Write("a=");
                int a =
                Convert.ToInt32(Console.ReadLine());

                
                int y = 4;
                

                int P = a * y;
                Console.WriteLine("Периметр:{0}", P);
            }
            while (true);

        }
    }
}
