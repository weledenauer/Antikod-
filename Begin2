using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Begin2
{
    class Program
    {
        static void Main(string[] args)
        {
            do
            {
                Console.Write("a=");
                int a =
                Convert.ToInt32(Console.ReadLine());

                int S = a * a;
                Console.WriteLine("Площадь:{0}", S);
            }
            while (true);
        }
    }
}
