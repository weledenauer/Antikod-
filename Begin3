using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Begin3
{
    class Program
    {
        static void Main(string[] args)
        {
            do
            {
                Console.Write("a=");
                int a =
                Convert.ToInt32(Console.ReadLine());

                Console.Write("b=");
                int b =
                Convert.ToInt32(Console.ReadLine());

                int S = a * b;
                Console.WriteLine("Площадь:{0}", S);

                int P = 2 * (a + b);
                Console.WriteLine("Периметр:{0}", P);

            }
            while (true);
        }
    }
}
